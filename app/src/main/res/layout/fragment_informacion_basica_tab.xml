<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.papay.tallerencuestas.InformacionBasicaTab"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNombreInfoBasica"
        android:hint="Nombre"
        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtApellidoInfoBasica"
        android:hint="Apellidos" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtFechaNacimientoInfoBasica"
        android:hint="Fecha de Nacimiento" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ComboTipoDocumentoInfoBasica" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtDocumentoInfoBasica"
        android:hint="Numero de Documento" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNumeroTelefonoInfoBasica"
        android:hint="Numero de Telefono" />

    <TextView
        android:text="Genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGeneroInfoBasica" />

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/rbgGeneroInfoBasica"
        android:layout_height="110dp">

        <RadioButton
            android:text="Masculino"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnMasculinoInfoBasica" />

        <RadioButton
            android:text="Femenino"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnFemeninoInfoBasica" />

        <RadioButton
            android:text="Otro"
            android:layout_width="99dp"
            android:layout_height="53dp"
            android:id="@+id/rbtnOtroInfoBasica"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-60dp" />

    </RadioGroup>

    <Button
        android:text="Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardarInfoBasica" />


</LinearLayout>
